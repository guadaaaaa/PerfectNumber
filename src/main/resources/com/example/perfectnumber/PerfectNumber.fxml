<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" stylesheets="@styles.css" spacing="10" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.perfectnumber.PerfectController">
    <children>
        <Label alignment="CENTER" prefHeight="25.0" prefWidth="405.0" text="PERFECT NUMBER?">
            <font>
                <Font name="Lucida Sans Unicode" size="30.0" />
            </font>
        </Label>
        <HBox spacing="10" alignment="CENTER">
            <Label prefHeight="17.0" prefWidth="130.0" text="Enter a number:">
                <font>
                    <Font name="Lucida Sans Unicode" size="15.0" />
                </font>
            </Label>
            <TextField fx:id="numField" />
        </HBox>
        <HBox spacing="10" alignment="CENTER">
            <Label text="Enter number of threads:">
                <font>
                    <Font name="Lucida Sans Unicode" size="15.0" />
                </font>
            </Label>
            <TextField fx:id="threadField" />
        </HBox>
        <Button onAction="#startFindingPerfectNumbers" text="Start">
            <font>
                <Font name="Lucida Sans Unicode" size="15.0" />
            </font>
        </Button>
        <TextArea fx:id="resultArea" prefHeight="200">
            <font>
                <Font name="Lucida Sans Unicode" size="14.0"/>
            </font>
        </TextArea>
        <HBox fx:id="progressBox" />
    </children>
</VBox>