<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.perfectnumber.PerfectNumberFinderController">
    <children>
        <TextField alignment="CENTER" prefHeight="25.0" prefWidth="405.0" text="LET US FIND YOUR PERFECT NUMBER!">
            <font>
                <Font name="Impact" size="24.0" />
            </font>
        </TextField>
        <HBox spacing="10">
            <Label prefHeight="17.0" prefWidth="130.0" text="Enter a number:" />
            <TextField fx:id="numField" />
        </HBox>
        <HBox spacing="10">
            <Label text="Enter number of threads:" />
            <TextField fx:id="threadField" />
        </HBox>
        <Button onAction="#startFindingPerfectNumbers" text="Start" />
        <HBox fx:id="progressBox" />
        <TextArea fx:id="resultArea" prefHeight="200" />
    </children>
</VBox>